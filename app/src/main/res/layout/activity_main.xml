<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fd11"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chef"
        android:tint="#C0C0C0"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="20dp"
        android:height="50dp"
        android:background="@drawable/edit_round"
        android:fontFamily=""
        android:hint="username"
        android:drawablePadding="5dp"
        android:textStyle="bold"
        android:textColorHint="#686868"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/ic"
        android:backgroundTint="#A9FFFFFF"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#686868"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/passwd"
        android:height="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:drawablePadding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#A9FFFFFF"/>
    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Login"
        android:background="@drawable/button_round"
        android:textColor="@android:color/white"
        android:backgroundTint="#F503A9F4"
        />

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_marginTop="38dp"
        android:fontFamily="sans-serif-black"
        android:text="Signup?"
        android:layout_centerHorizontal="true"
        android:textColor="#8797A2"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>